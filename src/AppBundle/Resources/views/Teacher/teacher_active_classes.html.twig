{% extends "@App/Teacher/teacher_dashboard_base.html.twig" %}
    {% trans_default_domain 'FOSUserBundle' %}

    {% block stylesheets %}
        {{ parent() }}
    {% endblock stylesheets %}

    {% block page_title %}
        {{ 'app.active_class_list'|trans }}
    {% endblock%}


    {% block page_content %}
        <div class="row tile_count">
            <!-- COURSE COUNT -->
            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                <div class="text-center">
                    <span class="count_top"><i class="fa fa-book"></i> {{ 'app.dashboard.courses'|trans }}</span>
                    <div class="count text-center"><a href="{{ path('teacher_dashboard',{'type':1}) }}">{{ courses|length }}</a></div>
                    {#<span class="count_bottom">{{ 'app.dashboard.last_add'|trans }}: <br>{{ lastTeacherCourse.courseCourse.createdAt|date('d M',"America/Bogota") }}</span>#}
                </div>
            </div>
            <!-- END CURSE COUNT -->
            <!-- COURSE COUNT -->
            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                <div class="text-center">
                    <span class="count_top"><i class="fa fa-book"></i> {{ 'app.active_courses'|trans }}</span>
                    <div class="count text-center"><a href="{{ path('teacher_dashboard',{'type':0}) }}">{{ activeCourses|length }}</a></div>
                </div>
            </div>
            <!-- END CURSE COUNT -->
            <!-- CLASS COUNT -->
            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                <div class="text-center">
                    <span class="count_top"><i class="fa fa-address-book-o"></i> {{ 'app.dashboard.classes'|trans }}</span>
                    <div class="count text-center"><a href="{{ path('teacher_dashboard',{'type':3}) }}">{{ classes|length }}</a></div>
                </div>
            </div>
            <!-- END CLASS COUNT -->
            <!-- ACTIVE CLASS COUNT -->
            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                <div class="text-center">
                    <span class="count_top"><i class="fa fa-book"></i> {{ 'app.active_classes'|trans }}</span>
                    <div class="count text-center"><a href="{{ path('teacher_dashboard',{'type':2}) }}">{{ activeClasses|length }}</a></div>
                </div>
            </div>
            <!-- END ACTIVE CLASS COUNT -->
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'app.active_class_list'|trans }}</h2>
                    <ul class="nav navbar-right panel_toolbox" style="min-width: 20px">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        {{ 'app.dashboard.lookup.class_lookup_message'|trans }}
                    </p>
                    <table id="datatable-fixed-header" class="table table-striped table-bordered" style="margin-bottom: 30px">
                        <thead>
                        <tr>
                            <th>NÂº</th>
                            <th>{{ 'app.dashboard.class_code'|trans }}</th>
                            <th>{{ 'app.dashboard.class_period'|trans }}</th>
                            <th>{{ 'app.dashboard.course_code_code'|trans }}</th>
                            <th>{{ 'app.dashboard.course_name'|trans }}</th>
                            <th>{{ 'app.action'|trans }}</th>
                            {#<th>{{ ''|trans }}</th>#}
                        </tr>
                        </thead>
                        <tbody>
                        {% set count = 1 %}
                        {% for class in activeClasses %}
                            <tr>
                                <td>{{ count }}</td>
                                <td><a href="{{ path('view_class',{'idClass':class.idClassCourse}) }}">{{ class.classCode }}</a></td>
                                <td>{{ class.activePeriod }}</td>
                                <td>{{ class.course.courseCode }}</td>
                                <td>{{ class.course.nameCourse }}</td>
                                <td><a class="btn-arepa" style="width: 100px;font-size: 15px" href="{{ path('view_class',{'idClass':class.idClassCourse}) }}">{{ 'app.go_to_class'|trans }}</a></td>
                            </tr>
                            {% set count = count + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    {% endblock %}

