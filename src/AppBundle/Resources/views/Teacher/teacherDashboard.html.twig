{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-12">
    <div class="col-md-4" style="background-color: #3c3c3c;height: 450px">
    </div>
    <div class="col-md-4" style="background-color: #8dfa86;height: 550px">
        <h1 style="border: 1px solid black; background-color: white">Hola Mundo</h1>
    </div>
    <div class="col-md-4" style="background-color: #fa2f30;height: 550px">
        <h1 style="border: 1px solid black; background-color: white">Hola Mundo</h1>
    </div>
    <h1>
        {% if name is defined %}
            Erilka
        {% else %}
            Andres
        {% endif %}
    </h1>
    <script>
        $(document).ready(function () {
            $("#show-button").on('click',function () {
                $("#hidden-div").toggle();
            });
        });
    </script>
    <div>
        <button id="show-button" style="font-size: 20px;background-color: #0f0f0f;color: white;border: 1px solid black; border-radius: 15px">Mostrar</button>
    </div>
    <div id="hidden-div" style="display: none">
        hola mundo
    </div>
</div>
{% endblock %}