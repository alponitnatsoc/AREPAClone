{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div>
        <div class="login_wrapper" style="margin-top: 10%; min-width: 40%">
            <h1 style="margin: 30px 0 10px; font-size: 20px">{{ 'registration.send_request'|trans }}</h1>
            <p>{{ 'registration.check_email'|trans({'%email%': user.email}) }}</p>
            <div class="clearfix"></div>
            <div class="separator">
                <p class="change_link">{{ 'app.messages.return_to'|trans }}
                    <a href="{{ path('fos_user_security_login') }}" class="to_register">{{ 'app.messages.to_login'|trans }}</a>
                </p>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
