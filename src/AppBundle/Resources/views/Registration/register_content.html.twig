{% trans_default_domain 'FOSUserBundle' %}
<style>
    li {
        list-style: none;
        margin-left: -38px;
        margin-right: 0;
        margin-top: 0%;
        text-align: -webkit-left;
        margin-bottom: -3%;
    }
</style>
<div>
    <div class="login_wrapper" style="margin-top: 4%">
        <div class="animate form login_form">
            {%  dump(form) %}
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <section class="login_content" style="padding: 0px">
                <h1>Create Account</h1>
                <div>
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Username'}}) }}
                    <div style="color: darkred;">{{ form_errors(form.username) }}</div>
                </div>
                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
                    <div style="color: darkred;">{{ form_errors(form.email) }}</div>
                </div>
                <div>
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Password'}}) }}
                    <div style="color: darkred;">{{ form_errors(form.plainPassword.first) }}</div>
                </div>
                <div>
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Password'}}) }}
                    <div style="color: darkred;">{{ form_errors(form.plainPassword.second) }}</div>
                </div>
                <div class="clearfix"></div>
                <br/>
                <div>
                    <input class="btn btn-default submit" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>
                {{ form_widget(form._token) }}
                {{ form_end(form) }}
                <div class="clearfix"></div>
                <div class="separator">
                    <p class="change_link">Already a member ?
                        <a href="{{ path('fos_user_security_login') }}" class="to_register"> Log in </a>
                    </p>
                    <div>
                        <img src="{{ asset('assets/images/logo.png') }}" alt="..." style="width: 30%">
                    </div>
                    <div class="clearfix"></div>
                    <p>Â©2016 All Rights Reserved. <a href="">Privacy and Terms</a></p>
                </div>

            </section>
        </div>
    </div>
</div>