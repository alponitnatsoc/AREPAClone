    {% endblock stylesheets %}

    {% block page_title %}

            {{ 'app.dashboard.classes'|trans }}

    {% endblock%}

 {% block page_content %}

     <div class="col-md-12 col-sm-12 col-xs-12">
         <div class="x_panel">
             <div class="x_title">
                 <h2>{{ 'app.dashboard.lookup.list_classes'|trans }}</h2>
                 <ul class="nav navbar-right panel_toolbox">
                     <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                     </li>
                     <li class="dropdown">
                         <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                         <ul class="dropdown-menu" role="menu">
                             <li><a href="#">Settings 1</a>
                             </li>
                             <li><a href="#">Settings 2</a>
                             </li>
                         </ul>
                     </li>
                     <li><a class="close-link"><i class="fa fa-close"></i></a>
                     </li>
                 </ul>
                 <div class="clearfix"></div>
             </div>
             <div class="x_content">
                 <p class="text-muted font-13 m-b-30">
                     {{ 'app.dashboard.lookup.course_lookup_message'|trans }}
                 </p>
                 <table id="datatable-fixed-header" class="table table-striped table-bordered" style="margin-bottom: 30px">
                     <thead>
                     <tr>
                         <th>NÂº</th>
                         <th>{{ 'app.dashboard.class_id'|trans }}</th>
                         <th>{{ 'app.dashboard.class_code'|trans }}</th>
                         <th>{{ 'app.dashboard.class_period'|trans }}</th>
                         <th>{{ 'app.dashboard.course_code_code'|trans }}</th>
                         <th>{{ 'app.dashboard.course_name'|trans }}</th>
                         <th>{{ 'app.dashboard.teacher_name'|trans }}</th>
                         <th>{{ 'app.dashboard.class_grade'|trans }}</th>
                         {#<th>{{ ''|trans }}</th>#}
                     </tr>
                     </thead>
                     <tbody>
                     {% set count = 1 %}
                     {% for studentAssisst in studentAssisstClass%}
                        <tr>
                             <td>{{ count }}</td>
                             <td>{{ studentAssisst.classCourseClassCourse.idClass }}</td>
                             <td>{{ studentAssisst.classCourseClassCourse.classCode }}</td>
                             <td>{{ studentAssisst.classCourseClassCourse.activePeriod }}</td>
                             <td>{{ studentAssisst.classCourseClassCourse.courseCourse.courseCode }}</td>
                             <td>{{ studentAssisst.classCourseClassCourse.courseCourse.nameCourse }}</td>
                             {% if studentAssisst.classCourseClassCourse.classHasTeacher|length == 1 %}
                                 <td>{{ studentAssisst.classCourseClassCourse.classHasTeacher.first.teacherDictatesCourse.teacherTeacher.personPerson.fullName}}</td>
                             {% else %}
                                 {% set teach = '' %}
                                 {% set name = '' %}
                                 {% for teacher in studentAssisst.classCourseClassCourse.classHasTeacher %}
                                     {% if teacher == studentAssisst.classCourseClassCourse.classHasTeacher.last %}
                                         {% set name = (name ~ teacher.teacherDictatesCourse.teacherTeacher.personPerson.fullName) %}
                                     {% else %}
                                         {% set name = (name ~ teacher.teacherDictatesCourse.teacherTeacher.personPerson.fullName ~',') %}
                                     {% endif %}
                                 {% endfor %}
                                 <td>{{ name }}</td>
                             {% endif %}
                             <td>{{ studentAssisst.defGrade }}</td>
                         </tr>
                         {% set count = count + 1 %}
                     {% endfor %}

                     </tbody>
                 </table>
             </div>
         </div>
     </div>


 {% endblock %}

